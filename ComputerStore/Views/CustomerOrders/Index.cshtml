                    <td>
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#saleDetailsModal" data-sale-id="@sale.Id">
                            Подробнее
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
